<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/margin_16_dp"
    android:layout_marginEnd="@dimen/margin_16_dp"
    android:background="@drawable/menu_background"
    android:layout_marginTop="@dimen/margin_10_dp"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/table_number"
        style="@style/Title_Text_36sp_Roboto"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="@dimen/margin_16_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Стол №1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/table_status_color"
        android:layout_width="@dimen/margin_20_dp"
        android:layout_height="@dimen/margin_20_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        app:cardCornerRadius="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_20_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/status"
        style="@style/TextView_Roboto_16sp"
        android:layout_marginStart="@dimen/margin_2_dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        app:layout_constraintEnd_toStartOf="@id/table_status_color"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>