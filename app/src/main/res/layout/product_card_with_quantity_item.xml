<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/margin_16_dp"
    android:layout_marginEnd="@dimen/margin_16_dp"
    android:layout_marginTop="@dimen/margin_15_dp"
    android:background="@drawable/rounded_alert_dialog"
    android:backgroundTint="@color/card_view_background"
    android:layout_height="@dimen/width_130_dp">

    <TextView
        android:id="@+id/product_name"
        style="@style/TextView_Roboto_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        tools:text="Coffee" />

    <TextView
        android:id="@+id/price"
        style="@style/TextView_Roboto_Thin_16sp"
        app:layout_constraintStart_toEndOf="@+id/product_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/radius_8_dp"
        tools:text="(300 с за шт)" />

    <TextView
        android:id="@+id/total_price"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        style="@style/TextView_Roboto_Bold_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="600c" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plus"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="@color/main_enable_color"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/quantity"
        style="@style/TextView_Roboto_30sp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_5_dp"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        tools:text="2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/minus"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:src="@drawable/ic_baseline_remove_24"
        app:backgroundTint="@color/main_enable_color"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/quantity"
        app:tint="@color/white" />




</androidx.constraintlayout.widget.ConstraintLayout>